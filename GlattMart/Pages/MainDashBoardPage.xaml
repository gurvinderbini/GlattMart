                        <Image Grid.Column="0" Grid.Row="2" Source="list_icon.png" Aspect="AspectFit" HeightRequest="30"></Image>
                        <Image Grid.Column="0" Grid.Row="3" Source="logout_icon.png" Aspect="AspectFit" HeightRequest="30"></Image>
